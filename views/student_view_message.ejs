<!DOCTYPE html>
<html>
<head>
  <title>View Message</title>
  
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
  <%- include("partials/banner", { req }) %>

  <header class="page-container" style="text-align: center;">
    <h2><i class="fas fa-envelope-open-text"></i> Message Details</h2>
    <div style="margin-top: 1rem;">
      <a href="/student/messages" class="button">Back to Inbox</a>
    </div>
  </header>
  

  <main class="page-container">

    <% if (req.query.replied) { %>
      <div id="replySuccessMessage" class="alert success">
        <i class="fas fa-check-circle"></i> Reply sent successfully!
      </div>
    <% } %>
  
    <!-- Message Details -->
    <div class="summary-card">
      <h2><i class="fas fa-envelope-open-text"></i> <%= message.subject %></h2>
      <p><strong>From:</strong> <%= message.sender_name %></p>
      <p><strong>Sent:</strong> <%= new Date(message.sent_at).toLocaleString() %></p>
      <p><%= message.body %></p>
    </div>
  
    <!-- Replies -->
    <div class="summary-card">
      <h3><i class="fas fa-comments"></i> Replies</h3>
      <% if (replies.length === 0) { %>
        <p>No replies yet.</p>
      <% } else { %>
        <ul>
          <% replies.forEach(reply => { %>
            <li style="margin-bottom: 1rem;">
              <strong><%= reply.sender_name %></strong> 
              <small>(<%= new Date(reply.sent_at).toLocaleString() %>)</small><br>
              <div><%= reply.body %></div>
              <hr>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </div>
  
    <!-- Reply Form -->
    <div class="summary-card">
      <h3><i class="fas fa-reply"></i> Reply to this message</h3>
      <form method="POST" action="/student/messages/reply" class="form-group">
        <input type="hidden" name="parent_id" value="<%= message.message_id %>">
        <textarea name="body" rows="4" required></textarea>
        <br>
        <button type="submit" class="button"><i class="fas fa-paper-plane"></i> Send Reply</button>
      </form>
    </div>
  
    <!-- Delete Option -->
    <div class="summary-card">
      <form action="/student/messages/<%= message.message_id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this message?');">
        <button type="submit" class="button danger"><i class="fas fa-trash"></i> Delete Message</button>
      </form>
    </div>
  
  </main>
  

  <footer>
    <p>University Portal Â© <%= currentYear %></p>
  </footer>

  <script>
    setTimeout(() => {
      const msg = document.getElementById('replySuccessMessage');
      if (msg) {
        msg.style.transition = 'opacity 0.5s ease';
        msg.style.opacity = '0';
        setTimeout(() => msg.remove(), 500);
      }
    }, 4000);
  </script>
  
</body>
</html>
