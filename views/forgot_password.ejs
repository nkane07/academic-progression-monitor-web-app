<!DOCTYPE html>
<html>
<head>
  <title>Forgot Password</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include("partials/banner", { req }) %>

  <main class="page-container">
    <h1>Forgot Password</h1>

    <!-- succes or fail-->
    <% if (success) { %>
      <div class="alert success"><%= success %></div>
    <% } else if (error) { %>
      <div class="alert error"><%= error %></div>
    <% } %>

    <!-- Password reset form -->
    <form action="/forgot-password" method="POST" class="summary-card">
      <div class="form-group">
        <label for="email">Enter your registered email:</label>
        <input type="email" name="email" id="email" required>
      </div>

      <div class="button-group" style="display: flex; gap: 1rem; margin-top: 1rem;">
        <button type="submit" class="button">Reset Password</button>
        <a href="/" class="button-outline">Back to Login</a>
      </div>
    </form>
  </main>

  <footer>
    <p>University Portal Â© <%= new Date().getFullYear() %></p>
  </footer>
</body>
</html>
