<!DOCTYPE html>
<html>
<head>
  <title>Edit Module</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include("partials/banner", { req }) %>

  <main class="page-container">
    <h1>Edit Module</h1>

    <div class="nav-buttons">
      <a href="/admin/modules" class="button">Back to Modules</a>
     
    </div>

    <div class="summary-card">
      <form action="/admin/modules/<%= module.module_id %>/update" method="POST">
        <div class="form-group">
          <label for="module_name">Module Name:</label>
          <input type="text" name="module_name" id="module_name" value="<%= module.module_name %>" required>
        </div>

        <div class="form-group">
          <label for="module_code">Module Code:</label>
          <input type="text" name="module_code" id="module_code" value="<%= module.module_code %>" required>
        </div>

        <div class="form-group">
          <label for="credit_value">Credit Value:</label>
          <input 
          type="number" 
          name="credit_value" 
          id="credit_value" 
          min="0" 
          max="120" 
          step="1" 
          value="<%= module.credit_value %>" 
          required
        >
        
        </div>

        <div class="form-group">
          <label for="degree_programme_code">Pathway Code:</label>
          <input type="text" name="degree_programme_code" id="degree_programme_code" value="<%= module.degree_programme_code %>" required>
        </div>

        <div class="form-group">
          <label for="semester">Semester:</label>
          <select name="semester" id="semester" required>
            <option value="AUT" <%= module.semester === 'AUT' ? 'selected' : '' %>>Autumn</option>
            <option value="SPR" <%= module.semester === 'SPR' ? 'selected' : '' %>>Spring</option>
            <option value="FYR" <%= module.semester === 'FYR' ? 'selected' : '' %>>Full Year</option>
          </select>
        </div>

        <button type="submit" class="button">Update Module</button>
      </form>
    </div>
  </main>

  <footer>
    <p>University Portal Â© <%= currentYear %></p>
  </footer>
</body>
</html>
