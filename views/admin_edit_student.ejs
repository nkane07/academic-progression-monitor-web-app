<!--
  Form for editing an existing student's details.
  Submits a POST request to /admin/students/:user_id/edit
-->
<form action="/admin/students/<%= student.user_id %>/edit" method="POST" class="form-section">

  <!--first name-->
  <div class="form-group">
    <label for="first_name">First Name:</label>
    <input 
      type="text" 
      name="first_name" 
      id="first_name" 
      value="<%= student.first_name %>" 
      required>
  </div>

  <!--last name-->
  <div class="form-group">
    <label for="last_name">Last Name:</label>
    <input 
      type="text" 
      name="last_name" 
      id="last_name" 
      value="<%= student.last_name %>" 
      required>
  </div>

  <!--student number-->
  <div class="form-group">
    <label for="student_number">Student Number:</label>
    <input 
      type="text" 
      name="student_number" 
      id="student_number" 
      value="<%= student.student_number %>" 
      required>
  </div>

  <!--pathway dropdown-->
  <div class="form-group">
    <label for="pathway">Pathway:</label>
    <select name="pathway" id="pathway" required>
      <option <%= student.pathway === "Information Systems" ? "selected" : "" %>>Information Systems</option>
      <option <%= student.pathway === "Business Data Analytics" ? "selected" : "" %>>Business Data Analytics</option>
    </select>
  </div>

  <!--year/ level drop down-->
  <div class="form-group">
    <label for="year">Year:</label>
    <select name="year" id="year" required>
      <option value="1" <%= student.current_year === 1 ? "selected" : "" %>>Year 1</option>
      <option value="2" <%= student.current_year === 2 ? "selected" : "" %>>Year 2</option>
      <option value="3" <%= student.current_year === 3 ? "selected" : "" %>>Year 3</option>
    </select>
  </div>

  <!--submit button-->
  <div class="form-group">
    <button type="submit" class="button">Save Changes</button>
  </div>

</form>
