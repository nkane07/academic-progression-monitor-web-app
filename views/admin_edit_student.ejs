<form action="/admin/students/<%= student.user_id %>/edit" method="POST">
    <label>Name:</label>
    <input name="first_name" value="<%= student.first_name %>" required>
    <input name="last_name" value="<%= student.last_name %>" required>
  
    <label>Student Number:</label>
    <input name="student_number" value="<%= student.student_number %>" required>
  
    <label>Pathway:</label>
    <select name="pathway">
      <option <%= student.pathway === "Information Systems" ? "selected" : "" %>>Information Systems</option>
      <option <%= student.pathway === "Business Data Analytics" ? "selected" : "" %>>Business Data Analytics</option>
    </select>
  
    <label>Year:</label>
    <select name="year">
      <option value="1" <%= student.current_year === 1 ? "selected" : "" %>>Year 1</option>
      <option value="2" <%= student.current_year === 2 ? "selected" : "" %>>Year 2</option>
      <option value="3" <%= student.current_year === 3 ? "selected" : "" %>>Year 3</option>
    </select>
  
    <button type="submit">Save</button>
  </form>
  