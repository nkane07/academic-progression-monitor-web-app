<!DOCTYPE html>
<html>
<head>
  <title>View Message</title>
  <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
  <header>
    <h2><i class="fas fa-envelope-open-text"></i> Message Details</h2>
    <nav>
      <a href="/student/messages" class="button">Back to Inbox</a>
      <a href="/student" class="button">Dashboard</a>
      <a href="/logout" class="button">Logout</a>
    </nav>
  </header>

  <main>
    <section>
      <h3><%= message.subject %></h3>
      <p>
        <strong>From:</strong> <%= message.sender_name %><br>
        <strong>Sent:</strong> <%= new Date(message.sent_at).toLocaleString() %>
      </p>
      <div>
        <p><%= message.body %></p>
      </div>
    </section>

    <!-- Replies -->
    <section>
      <h4><i class="fas fa-comments"></i> Replies</h4>
      <% if (replies.length === 0) { %>
        <p>No replies yet.</p>
      <% } else { %>
        <ul>
          <% replies.forEach(reply => { %>
            <li style="margin-bottom: 1rem;">
              <strong><%= reply.sender_name %></strong>
              (<%= new Date(reply.sent_at).toLocaleString() %>)<br>
              <div><%= reply.body %></div>
              <hr>
            </li>
          <% }) %>
        </ul>
      <% } %>
    </section>

    <!-- Reply Form -->
    <section>
      <h4><i class="fas fa-reply"></i> Reply to this message</h4>
      <form method="POST" action="/student/messages/reply">
        <input type="hidden" name="parent_id" value="<%= message.message_id %>">
        <textarea name="body" rows="4" required></textarea><br>
        <button type="submit" class="button"><i class="fas fa-paper-plane"></i> Send Reply</button>
      </form>
    </section>

    <!-- Delete Option -->
    <section>
      <form action="/student/messages/<%= message.message_id %>/delete" method="POST" style="margin-top: 2rem;" onsubmit="return confirm('Are you sure you want to delete this message?');">
        <button type="submit" class="button danger"><i class="fas fa-trash"></i> Delete Message</button>
      </form>
    </section>
  </main>

  <footer>
    <p>University Portal Â© <%= currentYear %></p>
  </footer>
</body>
</html>
