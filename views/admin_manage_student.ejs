<!DOCTYPE html>
<html>
<head>
  <title>Manage Student</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include("partials/banner", { req }) %>

  <main class="page-container">
    <h1>Manage Student Record</h1>

    <div class="nav-buttons">
      <a href="/admin/students" class="button">Back to Student List</a>
    </div>

    <% if (req.query.updated) { %>
      <div id="updateBanner" class="alert success">
      Student record updated successfully!
      </div>
    <% } %>

    <div class="summary-card">
      <h3><%= student.first_name %> <%= student.last_name %> (<%= student.student_number %>)</h3>

      <form action="/admin/students/<%= student.user_id %>/update" method="POST">
        <div class="form-group">
          <label for="first_name">First Name:</label>
          <input type="text" name="first_name" id="first_name" value="<%= student.first_name %>" required>
        </div>

        <div class="form-group">
          <label for="last_name">Last Name:</label>
          <input type="text" name="last_name" id="last_name" value="<%= student.last_name %>" required>
        </div>

        <div class="form-group">
          <label for="student_number">Student Number:</label>
          <input type="text" name="student_number" id="student_number" value="<%= student.student_number %>" required>
        </div>

        <div class="form-group">
          <label for="pathway">Pathway:</label>
          <select name="pathway" id="pathway" required>
            <option value="Information Systems" <%= student.pathway === 'Information Systems' ? 'selected' : '' %>>Information Systems</option>
            <option value="Business Data Analytics" <%= student.pathway === 'Business Data Analytics' ? 'selected' : '' %>>Business Data Analytics</option>
          </select>
        </div>

        <div class="form-group">
          <label for="current_year">Level / Year:</label>
          <select name="current_year" id="current_year" required>
            <option value="Year 1" <%= student.level === 'Year 1' ? 'selected' : '' %>>Year 1</option>
            <option value="Year 2" <%= student.level === 'Year 2' ? 'selected' : '' %>>Year 2</option>
            <option value="Year 3" <%= student.level === 'Year 3' ? 'selected' : '' %>>Year 3</option>
          </select>
        </div>

        <div class="form-group">
          <button type="submit" class="button">Update Student</button>
        </div>
      </form>

      <form action="/admin/students/<%= student.user_id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this student?');" style="margin-top: 2rem;">
        <button type="submit" class="button danger">Delete Student</button>
      </form>
    </div>
  </main>

  <footer>
    <p>University Portal Â© <%= currentYear %></p>
  </footer>

  <script>
    setTimeout(() => {
      const banner = document.getElementById('updateBanner');
      if (banner) {
        banner.style.transition = 'opacity 0.5s ease';
        banner.style.opacity = '0';
        setTimeout(() => banner.remove(), 500);
      }
    }, 4000); 
  </script>
</body>
</html>
