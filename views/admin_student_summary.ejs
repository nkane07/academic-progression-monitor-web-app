<!DOCTYPE html>
<html>
<head>
  <title>Student Summary</title>
  
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <%- include("partials/banner") %>


  <header>
    <h2>Student Summary</h2>
   
  </header>

  <main class="container">

    <h3><%= student.first_name %> <%= student.last_name %></h3>
    <p><strong>Student Number:</strong> <%= student.student_number %></p>
    <p><strong>Pathway:</strong> <%= student.pathway %></p>

    <h3>Module Grades</h3>
    <table>
      <thead>
        <tr>
          <th>Academic Year</th>
          <th>Module Code</th>
          <th>Module Name</th>
          <th>Grade</th>
          <th>Grade Result</th>
        </tr>
      </thead>
      <tbody>
        <% records.forEach(record => { %>
          <tr>
            <td><%= record.academic_year %></td>
            <td><%= record.module_code %></td>
            <td><%= record.module_name %></td>
            <td><%= record.grade %></td>
            <td><%= record.grade_result %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    <h3>Progression Summary</h3>

    <p><strong>Total Credits:</strong> <%= totalCredits %> / <%= requiredCredits %></p>
    
    <div class="progress-container">
      <div class="progress-bar" style="width: <%= Math.min((totalCredits / requiredCredits) * 100, 100) %>%; background-color: <%= totalCredits >= requiredCredits ? '#28a745' : '#ffc107' %>;">
        <span class="progress-text"><%= Math.round((totalCredits / requiredCredits) * 100) %>%</span>
      </div>
    </div>
    
    <p><strong>Average Grade:</strong> <%= averageGrade %>%</p>
    
    <div class="progress-container">
      <div class="progress-bar" style="width: <%= Math.min(averageGrade, 100) %>%; background-color: <%= averageGrade >= 40 ? '#28a745' : '#dc3545' %>;">
        <span class="progress-text"><%= Math.round(averageGrade) %>%</span>
      </div>
    </div>
    
    <p><strong>Failed Modules:</strong> <%= failedModules.length ? failedModules.join(', ') : 'None' %></p>
    <p><strong>Modules Requiring Resit:</strong> <%= resitModules.length ? resitModules.join(', ') : 'None' %></p>
    
    <% if (coreFails.length > 0) { %>
        <p><strong>Failed Core Modules:</strong> 
          <% coreFails.forEach((mod, i) => { %>
            <span class="failed-core-module"><%= mod %></span><%= i !== coreFails.length - 1 ? ', ' : '' %>
          <% }) %>
        </p>
      <% } %>
      
      
    
    <% if (exceededAttempts.length > 0) { %>
      <p><strong> Modules with 4+ Fails:</strong> <%= exceededAttempts.join(', ') %></p>
    <% } %>
    
    <%
    const isNegative = ['Fail', 'Resit', 'Review', 'Denied'].some(keyword =>
      decision.includes(keyword)
    );
  %>
  
  <p>
    <strong>Final Progression Decision:</strong> 
    <span class="<%= decision.includes('Eligible') ? 'progression-decision-pass' : 'progression-decision-fail' %>">
      <%= decision %>
    </span>
  </p>
  
  
    

  </main>

  <footer>
    <p>University Portal Â© <%= new Date().getFullYear() %></p>
  </footer>
</body>
</html>
