<!DOCTYPE html>
<html>
<head>
  <title>Manage Grades</title>
  <link rel="stylesheet" href="https://cdn.simplecss.org/simple.min.css">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <header>
    <h2>Manage Grades</h2>
    <nav>
      <a href="/admin" class="button">Dashboard</a>
      <a href="/admin/students" class="button">Manage Students</a>
      <a href="/admin/upload-csv" class="button">Upload CSV</a>
      <a href="/admin/messages/new" class="button">Send Messages</a>
      <a href="/logout" class="button">Logout</a>
    </nav>
  </header>

  <main>
    <!-- Search form -->
    <form method="get" action="/admin/grades" style="display: flex; justify-content: center; gap: 10px; margin-bottom: 1rem; position: relative;">
      <div style="position: relative;">
        <input 
          type="text" 
          name="search" 
          value="<%= search %>" 
          placeholder="Search student/module..." 
          style="padding-right: 30px;"
        />
        <% if (search) { %>
          <a href="/admin/grades" 
             style="position: absolute; right: 8px; top: 50%; transform: translateY(-50%); text-decoration: none; font-weight: bold; color: #888; font-size: 1rem;">
            ✕
          </a>
        <% } %>
      </div>
      <button type="submit" class="button">Search</button>
    </form>

    <!-- Error message if nothing found -->
    <% if (grades.length === 0 && search) { %>
      <div class="alert error" style="background-color: #f8d7da; color: #721c24; border: 1px solid #f5c6cb; padding: 0.75rem 1rem; border-radius: 6px; margin-bottom: 1rem; max-width: 600px; margin-left: auto; margin-right: auto;">
        No results found for "<%= search %>". Please try again.
      </div>
    <% } %>

    <!-- Grades table -->
    <% if (grades.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>Student</th>
            <th>Module</th>
            <th>Grade</th>
            <th>Result</th>
            <th>Credits</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% grades.forEach(g => { %>
            <tr>
              <td><%= g.first_name %> <%= g.last_name %></td>
              <td><%= g.module_code %></td>
              <form action="/admin/grades/<%= g.enrollment_id %>/update" method="POST">
                <td><input type="number" name="grade" value="<%= g.grade %>" required style="width: 60px;" /></td>
                <td>
                  <select name="result" required>
                    <option value="pass" <%= g.grade_result === 'pass' ? 'selected' : '' %>>Pass</option>
                    <option value="pass capped" <%= g.grade_result === 'pass capped' ? 'selected' : '' %>>Pass Capped</option>
                    <option value="fail" <%= g.grade_result === 'fail' ? 'selected' : '' %>>Fail</option>
                    <option value="excused" <%= g.grade_result === 'excused' ? 'selected' : '' %>>Excused</option>
                    <option value="absent" <%= g.grade_result === 'absent' ? 'selected' : '' %>>Absent</option>
                  </select>
                </td>
                <td><input type="number" name="credits" value="<%= g.credits_earned %>" required style="width: 60px;" /></td>
                <td><button type="submit" class="button">Update</button></td>
              </form>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>

    <!-- Pagination (only if results exist) -->
    <% if (grades.length > 0) { %>
      <p class="page-label">Page <%= currentPage %> of <%= totalPages %></p>

      <div class="pagination">
        <% if (currentPage > 1) { %>
          <a href="/admin/grades?page=<%= currentPage - 1 %>&search=<%= search %>" class="page-button">Previous</a>
        <% } %>

        <% 
          const maxVisible = 5;
          let startPage = Math.max(1, currentPage - Math.floor(maxVisible / 2));
          let endPage = Math.min(totalPages, startPage + maxVisible - 1);
          if (endPage - startPage < maxVisible - 1) {
            startPage = Math.max(1, endPage - maxVisible + 1);
          }
        %>

        <% for (let i = startPage; i <= endPage; i++) { %>
          <a 
            href="/admin/grades?page=<%= i %>&search=<%= search %>" 
            class="page-button <%= i === currentPage ? 'active' : '' %>"
          >
            <%= i %>
          </a>
        <% } %>

        <% if (currentPage < totalPages) { %>
          <a href="/admin/grades?page=<%= currentPage + 1 %>&search=<%= search %>" class="page-button">Next</a>
        <% } %>
      </div>
    <% } %>
  </main>

  <footer>
    <p>University Portal © <%= currentYear %></p>
  </footer>
</body>
</html>
