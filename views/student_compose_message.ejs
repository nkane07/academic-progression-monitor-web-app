<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Contact Admin</title>
  <meta name="viewport" content="width=device-width" />
  <link rel="stylesheet" href="/styles.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>

<body>
  <%- include("partials/banner", { req }) %>

  <header class="page-header">
    <h2>Contact an Academic Advisor</h2>
  </header>

  <main class="container">

    <% if (req.query.sent) { %>
      <div class="alert success">
        <i class="fas fa-check-circle"></i> Message sent successfully!
      </div>
    <% } %>

    <form method="POST" action="/student/messages/contact" class="styled-form">
      <div class="form-group">
        <label for="recipient_id">Send to:</label>
        <select name="recipient_id" id="recipient_id" required>
          <option value="" disabled selected>Select admin</option>
          <option value="1">Admin 1</option>
          <option value="2">Admin 2</option>
        </select>
      </div>

      <div class="form-group">
        <label for="subject">Subject:</label>
        <input type="text" id="subject" name="subject" placeholder="e.g. Question about grades" required />
      </div>

      <div class="form-group">
        <label for="body">Message:</label>
        <textarea id="body" name="body" rows="5" placeholder="Type your message here..." required></textarea>
      </div>

      <button type="submit" class="button">
        <i class="fas fa-paper-plane"></i> Send Message
      </button>
    </form>

  </main>

  <footer>
    <p>University Portal Â© <%= currentYear %></p>
  </footer>

  <script>
    setTimeout(() => {
      const alert = document.querySelector('.alert.success');
      if (alert) {
        alert.style.transition = 'opacity 0.5s ease';
        alert.style.opacity = '0';
        setTimeout(() => alert.remove(), 500);
      }
    }, 3000);
  </script>
</body>
</html>
