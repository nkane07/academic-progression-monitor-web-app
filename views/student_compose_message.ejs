<!DOCTYPE html>
<html>
<head>
  <title>Contact Advisor</title>
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body>
  <%- include("partials/banner", { req }) %>

  <main class="page-container">
    <h2><i class="fas fa-paper-plane"></i> Contact Advisor</h2>

    <% if (req.query.sent) { %>
      <div class="alert success">
        <i class="fas fa-check-circle"></i> Message sent successfully!
      </div>
    <% } %>

    <form action="/student/messages/contact" method="POST">
      <div class="form-group">
        <label for="subject">Subject</label>
        <input type="text" id="subject" name="subject" required>
      </div>

      <div class="form-group">
        <label for="body">Message</label>
        <textarea id="body" name="body" rows="6" required></textarea>
      </div>

      <button type="submit" class="button"><i class="fas fa-paper-plane"></i> Send Message</button>
    </form>
  </main>

  <footer>
    <p>University Portal Â© <%= currentYear %></p>
  </footer>

  <script>
    setTimeout(() => {
      const alert = document.querySelector('.alert.success');
      if (alert) {
        alert.style.transition = 'opacity 0.5s ease';
        alert.style.opacity = '0';
        setTimeout(() => alert.remove(), 500);
      }
    }, 4000);
  </script>
</body>
</html>
