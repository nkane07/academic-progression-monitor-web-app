<!DOCTYPE html>
<html>
<head>
  <title>Academic Record</title>
  <meta name="viewport" content="width=device-width" />
  <link rel="stylesheet" href="/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
  <%- include("partials/banner", { req }) %>

  <header class="page-header">
    <h2>Academic Record</h2>
  </header>

  <main class="container">
    <h3><i class="fas fa-book-open"></i> Module Grades</h3>

    <table>
      <thead>
        <tr>
          <th>Academic Year</th>
          <th>Module</th>
          <th>Grade</th>
          <th>Result</th>
        </tr>
      </thead>
      <tbody>
        <% records.forEach(record => { %>
          <tr>
            <td data-label="Academic Year"><%= record.academic_year %></td>
            <td data-label="Module"><%= record.module_name %></td>
            <td data-label="Grade"><%= record.grade %></td>
            <td data-label="Result"><%= record.grade_result %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </main>

  <footer>
    <p>University Portal Â© <%= currentYear %></p>
  </footer>
</body>
</html>
